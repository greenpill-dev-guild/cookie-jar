# üç™ Cookie Jar Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# WalletConnect Project ID (required for wallet connections)
# Get one at: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=""

# Alchemy API Key (optional but recommended for better RPC performance)
# Get one at: https://www.alchemy.com/
NEXT_PUBLIC_ALCHEMY_ID=""

# =============================================================================
# COOKIE JAR DEPLOYMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it should contain secrets!

# =============================================================================
# ETHERSCAN API KEYS
# =============================================================================
# Single API key that works across multiple chains
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# RPC ENDPOINTS
# =============================================================================
# Base Sepolia
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Ethereum Sepolia  
ETHEREUM_SEPOLIA_RPC_URL=https://rpc.sepolia.dev

# Celo Alfajores
CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org

# =============================================================================
# FACTORY DEPLOYMENT CONFIGURATION
# =============================================================================
# Address that will receive fees from all jar deposits
FEE_COLLECTOR=0xYourFeeCollectorAddressHere

# Address that will own the factory contract
FACTORY_OWNER=0xYourFactoryOwnerAddressHere

# Fee percentage (100 = 1%, 10000 = 100%)
FEE_PERCENTAGE=100

# Minimum deposit amounts
MIN_ETH_DEPOSIT=10000000000000000      # 0.01 ETH in wei
MIN_ERC20_DEPOSIT=1000000000000000000000  # 1000 tokens with 18 decimals

# =============================================================================
# DEPLOYMENT WALLET CONFIGURATION  
# =============================================================================
# DO NOT PUT PRIVATE KEYS HERE!
# Use Foundry Keystore instead: cast wallet import deployer --interactive
# This is just the address for reference
DEPLOYER_ADDRESS=0xYourDeployerAddressHere
